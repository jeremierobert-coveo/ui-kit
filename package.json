{
  "name": "ui-kit",
  "private": true,
  "scripts": {
    "setup": "npm i && lerna bootstrap",
    "dev": "lerna run --parallel dev",
    "build": "lerna run build",
    "check": "gts check",
    "fix": "gts fix"
  },
  "devDependencies": {
    "@types/node": "^10.0.3",
    "eslint-plugin-react": "^7.19.0",
    "gts": "^2.0.0-alpha.4",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "typedoc": "https://github.com/coveord/typedoc",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "node ./hooks/commit-msg.js",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "npm run fix",
      "git add"
    ]
  }
}
